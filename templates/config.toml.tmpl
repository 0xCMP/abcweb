# if an environment is not provided using the "{{envAppName .AppName}}_ENV"
# environment variable, then your app will load the default environment set here.
env = "{{.DefaultEnv}}"
[dev]
	bind = ":4000"
	# Uncomment the below "tls-bind" line if you wish to use TLS in dev mode.
	# You may need to add an exception in your browser for your SSL cert.
	# tls-bind = ":4001"
	# These keys will only be used if "tls_bind" is set.
	tls-cert-file = "cert.pem"
	tls-key-file = "private.key"
	live-reload = true
	prod-logger = false
	assets-no-minify = true
	assets-no-hash = true
	assets-no-compress = true
	assets-no-cache = true
	render-recompile = true
	sessions-dev-storer = true
[prod]
	bind = ":80"
	tls-bind = ":443"
	tls-cert-file = "cert.pem"
	tls-key-file = "private.key"
