func TestNewRootMock(t *testing.T) {
	t.Parallel()

	root := NewRootMock("test")

	if root.Log == nil {
		t.Error("expected logger to be set")
	}
	if root.Render == nil {
		t.Error("expected renderer to be set")
	}
	if root.Session == nil {
		t.Error("expected sessions overseer to be set")
	}
}
